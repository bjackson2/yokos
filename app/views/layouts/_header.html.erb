<header class="bg-white" x-data="{ mobileMenuOpen: false }">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">YOKOS</span>
        <%= image_tag "butt.jpg", class: "w-12 rounded-2xl" %>
      <% end %>
    </div>
    <div class="flex lg:hidden" x-show="!mobileMenuOpen">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" x-on:click="mobileMenuOpen = true">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to "Sessions", admin_listening_sessions_path, class: "font-semibold leading-6 text-gray-900" %>
      <%= link_to "Artists", admin_artists_path, class: "font-semibold leading-6 text-gray-900" %>
      <%= link_to "Albums", "#", class: "font-semibold leading-6 text-gray-900" %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, class: "font-semibold leading-6 text-gray-900", data: { "turbo-method": "delete" } do %>
          Log out <span aria-hidden="true">&rarr;</span>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "font-semibold leading-6 text-gray-900" do %>
          Log in <span aria-hidden="true">&rarr;</span>
        <% end %>
      <% end %>
    </div>
  </nav>
  <div class="lg:hidden" role="dialog" aria-modal="true" x-show="mobileMenuOpen">
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
          <span class="sr-only">YOKOS</span>
          <%= image_tag "butt.jpg", class: "w-12 rounded-2xl" %>
        <% end %>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" x-on:click="mobileMenuOpen = false">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <%= link_to "Sessions", admin_listening_sessions_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
            <%= link_to "Artists", admin_artists_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
            <%= link_to "Albums", "#", class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          </div>
          <div class="py-6">
            <% if user_signed_in? %>
              <%= link_to "Log out", destroy_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50", data: { "turbo-method": "delete" } %>
            <% else %>
              <%= link_to "Log in", new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>