<h3>Links</h3>
<ul class="list-disc ml-8">
  <% owner.links.each do |link| %>
    <li>
      <p class="text-base leading-7 text-gray-600"><%= link_to link.text, link.uri, target: "_blank" %>
        <% if can_edit_data? %>
          <span class="ml-6"><%= link_to "Edit", edit_link_path(link) %></span>
        <% end %>
      </p>
    </li>
  <% end %>
</ul>
<div class="my-2">
  <%= link_to "Add link", new_link_path(owner_type: owner.class, owner_id: owner.id), class: 'btn-secondary p-1' %>
</div>